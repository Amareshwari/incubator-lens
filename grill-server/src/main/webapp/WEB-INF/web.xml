<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

    <display-name>Grill Server</display-name>
    <description>Unified Analytics</description>

    <servlet>
        <servlet-name>GrillAPI</servlet-name>
        <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>javax.ws.rs.Application</param-name>
            <param-value>com.inmobi.grill.server.AllApps</param-value>
        </init-param>        
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>GrillAPI</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>

    <!-- Servlet Configuration -->
    <context-param>
        <param-name>grill.server.log4j.properties</param-name>
        <param-value>WEB-INF/log4j.properties</param-value>
    </context-param>

    <!-- Servlet context listener to initialize the webapp -->
    <listener>
        <listener-class>com.inmobi.grill.server.GrillServletContextListener</listener-class>
    </listener>

</web-app>
